# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build user`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t user`.
FROM node:lts-alpine



# Install Python, make, and g++
RUN apk add --no-cache python3 make g++
ENV PYTHON=/usr/bin/python3


WORKDIR /app

RUN addgroup --system user && \
          adduser --system -G user user

COPY dist/apps/user user
RUN chown -R user:user .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix user --omit=dev -f install

EXPOSE 3001

CMD [ "node", "user" ]
