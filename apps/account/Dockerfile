# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build account`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t account`.
FROM node:lts-alpine

# Install Python, make, and g++
RUN apk add --no-cache python3 make g++
ENV PYTHON=/usr/bin/python3

WORKDIR /app

RUN addgroup --system account && \
          adduser --system -G account account

COPY dist/apps/account account
RUN chown -R account:account .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix account --omit=dev -f install

EXPOSE 3002

CMD [ "node", "account" ]
