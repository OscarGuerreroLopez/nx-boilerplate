{
  "name": "account",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/account/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/account",
        "main": "apps/account/src/main.ts",
        "tsConfig": "apps/account/tsconfig.app.json",
        "assets": ["apps/account/src/assets"],
        "generatePackageJson": true,
        "webpackConfig": "apps/account/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "account:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "account:build:development"
        },
        "production": {
          "buildTarget": "account:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/account/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/account/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx lint account",
          "nx build account",
          "docker build -f ./apps/account/Dockerfile . -t account"
        ],
        "parallel": false
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/account/Dockerfile . -t account"
    }
  },
  "tags": []
}
